<div class="container">
  <h6>All <%= @cocktails.count %> cocktails</h6>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-md-4">
        <div class="card">
        <%= cl_image_tag cocktail.photo.key, height: 300, width: 300, crop: :fill, class: "img-fluid" %>
        </div>
        <div class="card-footer">
        <h3>
          <%= link_to "#{cocktail["name"]}", cocktail_path(cocktail["id"]), id:"LinkTitle"%>
          <%= link_to "Delete", method: :delete,
          data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      <% end %>
        </h3>
        </div>
      </div>
  </div>
</div>



