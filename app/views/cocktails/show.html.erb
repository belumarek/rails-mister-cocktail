<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<h2><%= @cocktail.name %></h2>
    <% @cocktail.doses.each do |dose| %>
      <%= dose.description %> <%= dose.ingredient.name %>

    <%= link_to "Delete",
                dose_path(dose),
                method: :delete,
                data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></li>
    <% end %>

    <%= link_to "Add dose",  new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>

    <%= link_to "Back", cocktails_path %>

